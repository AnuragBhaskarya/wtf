#!/bin/bash

case "$1" in
    remove|purge)
        USER_HOME=$(eval echo ~${SUDO_USER})
        # Create a temporary restart script
        RESTART_SCRIPT="${USER_HOME}/.terminal_restart"
        cat > "$RESTART_SCRIPT" << 'EOF'
#!/bin/bash
echo "Restarting terminal in 3 seconds..."
sleep 3
exec bash -l
rm -f "$0"  # Remove this script
EOF
        chmod 755 "$RESTART_SCRIPT"
        chown $SUDO_USER:$SUDO_USER "$RESTART_SCRIPT"
        echo "To complete uninstallation, please run: ${RESTART_SCRIPT}"
        ;;
esac

exit 0